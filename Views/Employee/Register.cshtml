@model EmployeeWithPassword
<h2 class="mt-3"><i class="far fa-address-card"></i> Employee Register</h2>

<form method="post" asp-action="Register">
  <div asp-validation-summary="All" style="color:red;"></div>

  <div class="form-group mt-2">
    <label asp-for="@Model.Email">Email</label>
    <input asp-for="@Model.Email" class="form-control" placeholder="Email" />
  </div>
  <div class="form-group mt-2">
    <label asp-for="@Model.Password">Password</label>
    <input asp-for="@Model.Password" class="form-control" placeholder="Password" />
  </div>

  <div class="form-group mt-2">
    <label asp-for="@Model.LastName">Last Name</label>
    <input asp-for="@Model.LastName" class="form-control" placeholder="Last Name" />
  </div>
  <div class="form-group mt-2">
    <label asp-for="@Model.FirstName">First Name</label>
    <input asp-for="@Model.FirstName" class="form-control" placeholder="First Name" />
  </div>
  <div class="form-group mt-2">
    <label asp-for="@Model.Title">Title</label>
    <input asp-for="@Model.Title" class="form-control" placeholder="Title" />
  </div>
  <div class="form-group mt-2">
    <label asp-for="@Model.TitleOfCourtesy">Title of Courtesy</label>
    <input asp-for="@Model.TitleOfCourtesy" class="form-control" placeholder="Title of Courtesy" />
  </div>
  <div class="form-group mt-2">
    <label asp-for="@Model.BirthDate">Birth Date</label>
    <input type="date" asp-for="@Model.BirthDate" class="form-control" placeholder="Birth Date" />
  </div>
  <div class="form-group mt-2">
    <label asp-for="@Model.HireDate">Hire Date</label>
    <input type="date" asp-for="@Model.HireDate" class="form-control" placeholder="Hire Date" />
  </div>
  <div class="form-group mt-2">
    <label asp-for="@Model.Address">Address</label>
    <input asp-for="@Model.Address" class="form-control" placeholder="Address" />
  </div>
  <div class="form-group mt-2">
    <label asp-for="@Model.City">City</label>
    <input asp-for="@Model.City" class="form-control" placeholder="City" />
  </div>
  <div class="form-group mt-2">
    <label asp-for="@Model.Region">Region</label>
    <input asp-for="@Model.Region" class="form-control" placeholder="Region Code" />
  </div>
  <div class="form-group mt-2">
    <label asp-for="@Model.PostalCode">Postal Code</label>
    <input asp-for="@Model.PostalCode" class="form-control" placeholder="Postal Code" />
  </div>
  <div class="form-group mt-2">
    <label asp-for="@Model.Country">Country</label>
    <input asp-for="@Model.Country" class="form-control" placeholder="Country" />
  </div>
  <div class="form-group mt-2">
    <label asp-for="@Model.HomePhone">Home Phone</label>
    <input type="number" asp-for="@Model.HomePhone" class="form-control" placeholder="Home Phone" />
  </div>
  <div class="form-group mt-2">
    <label asp-for="@Model.Extension">Extension</label>
    <input type="number" asp-for="@Model.Extension" class="form-control" placeholder="Extension" />
  </div>
  <div class="form-group mt-2">
    <label asp-for="@Model.ReportsTo">Reports To</label>
    <input asp-for="@Model.ReportsTo" class="form-control" placeholder="ReportsTo" />
  </div>

  <button type="submit" class="btn btn-outline-primary mt-2 mb-4">Register</button>
</form>